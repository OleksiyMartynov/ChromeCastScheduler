<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <ImageView
            android:id="@+id/row_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_alarm" />

        <TextView
            android:id="@+id/row_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/row_icon"
            android:layout_alignTop="@+id/row_icon"
            android:layout_toRightOf="@+id/row_icon"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp"
            tools:text="00:00" />

        <TextView
            android:id="@+id/row_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/row_time"
            android:layout_alignTop="@+id/row_time"
            android:layout_toRightOf="@+id/row_time"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textSize="35sp"
            tools:text="Title" />

        <TextView
            android:id="@+id/row_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_icon"
            tools:text="http://www.videos.com/somevideo.mp4" />

        <ImageView
            android:id="@+id/row_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@id/row_time"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/row_time"
            android:src="@drawable/ic_delete" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
